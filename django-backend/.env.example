# Django Settings
DJANGO_SECRET_KEY=your-django-secret-key-here
DEBUG=True

# Database (if using PostgreSQL in production)
DATABASE_URL=postgresql://username:password@localhost:5432/unitrade_db

# Paystack Payment Gateway
PAYSTACK_SECRET_KEY=your-paystack-secret-key-here
PAYSTACK_PUBLIC_KEY=your-paystack-public-key-here

# Email Settings (if using email notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# SMS Settings (Zenoph Notify)
ZENOPH_API_KEY=your-zenoph-api-key-here
ZENOPH_SENDER_ID=your-sender-id

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Media Files (for production)
MEDIA_ROOT=/path/to/media/files
STATIC_ROOT=/path/to/static/files
